{
  "version": 3,
  "configurePresets": [
    {
      "name": "win-base",
      "hidden": true,
      "cacheVariables": {
        "dynaplex_all_warnings": false,
        //location where DynaPlex will store input and output on windows systems.  
        "DYNAPLEX_IO_ROOT_DIR": "C:/Users/wjaarsveld/OneDrive - TU Eindhoven/Desktop"
      }
    },
    {
      "name": "lin-base",
      "hidden": true,
      "cacheVariables": {
        "dynaplex_all_warnings": false,
        //location where DynaPlex will store input and output on linux systems. 
        "DYNAPLEX_IO_ROOT_DIR": "/home/willemvj"
      }
    },
    //WinDeb, WinRel, WinPB, are windows builds for respectivel debug, release, and for creating the python bindings.
    {
      "name": "WinDeb",
      "inherits": [ "x64-debug", "win-base" ],
      "cacheVariables": {
        //Location of PyTorch/Libtorch debug library was extracted (find on pytorch.org) e.g.:
        "dynaplex_pytorch_path": "c:/libtorch-win-shared-with-deps-debug-1.13.0+cpu/libtorch/share/cmake",
        //disabling makes running a bit faster, but not all functionality is available.
        "dynaplex_enable_pytorch": false,
        //Note that python bindings can only be built in release, since python.exe is a release build.
        "dynaplex_enable_pythonbindings": false,
        "dynaplex_enable_tests": true
      }
    },
    {
      "name": "WinRel",
      "inherits": [ "x64-release", "win-base" ],
      "cacheVariables": {
        //Location where PyTorch/LibTorch release library was extracted  (find on pytorch.org), e.g.:
        "dynaplex_pytorch_path": "C:/libtorch-win-shared-with-deps-1.13.0+cpu/libtorch/share/cmake",
        //enable pytorch for release:
        "dynaplex_enable_pytorch": true,
        //whether test_executables are included in the build. 
        "dynaplex_enable_tests": true
      }
    },
    {
      "name": "WinPB",
      "inherits": [ "x64-release", "win-base" ],
      "cacheVariables": {
        //For creating python bindings, linking to a anaconda version of pytorch is most stable, e.g. something like:
        //(consider using environment.yml to configure the envDP environment. )
        "dynaplex_pytorch_path": "C:/Users/wjaarsveld/Anaconda3/envs/envDP/Lib/site-packages/torch/share/cmake",
        "dynaplex_enable_pytorch": true,
        "dynaplex_enable_pythonbindings": true,
        "dynaplex_pybind_path": "C:/Users/wjaarsveld/Anaconda3/envs/envDP/Lib/site-packages/pybind11/share/cmake/pybind11",
        "dynaplex_python_path": "C:/Users/wjaarsveld/Anaconda3/envs/envDP"
      }
    },
    //LinDeb, LinRel, LinPB, are linux builds for respectivel debug, release, and for creating the python bindings.
    {
      "name": "LinDeb",
      "inherits": [ "linux-debug", "lin-base" ],
      "cacheVariables": {
        //Location of PyTorch library on linux:
        "dynaplex_pytorch_path": "/home/willemvj/libtorch/share/cmake",
        "dynaplex_enable_pytorch": true,
        "dynaplex_enable_pythonbindings": false,
        "dynaplex_enable_tests": true
      }
    },
    {
      "name": "LinRel",
      "inherits": [ "linux-release", "lin-base" ],
      "cacheVariables": {
        //Location of PyTorch library on linux:
        "dynaplex_pytorch_path": "/home/willemvj/libtorch/share/cmake",
        "dynaplex_enable_pytorch": true,
        "dynaplex_enable_pythonbindings": false,
        "dynaplex_enable_mpi": true
      }
    },
    {
      "name": "LinPB",
      "inherits": [ "linux-release", "lin-base" ],
      "cacheVariables": {
        //For creating python bindings, linking to a anaconda version of pytorch appears most stable, e.g. something like (when using environment.yml to configure)
        //Note that paths to TorchConfig.cmake and pybind11Config.cmake are needed. 
        "dynaplex_pytorch_path": "/home/willemvj/.conda/envs/envDP/lib/python3.11/site-packages/torch/share/cmake",
        "dynaplex_enable_pytorch": true,
        "dynaplex_enable_pythonbindings": true,
        "dynaplex_pybind_path": "/home/willemvj/.conda/envs/envDP/lib/python3.11/site-packages/pybind11/share/cmake/pybind11",
        "dynaplex_python_path": "/home/willemvj/.conda/envs/envDP",
        "dynaplex_enable_gurobi": false,
        "dynaplex_gurobi_path": ""
      }
    }
  ]
}
